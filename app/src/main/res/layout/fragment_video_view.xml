<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="620dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorBluePrimary">


        <com.space.licht.envisiondemo.widget.textview.RegularTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Group Talk"
            android:textSize="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_border_green"
            android:padding="2dp"
            android:src="@drawable/father_large"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_select"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:background="@drawable/voice_icon_select"
                android:button="@null"
                android:focusable="false"/>

            <com.space.licht.envisiondemo.widget.textview.RegularTextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Select all"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray_text"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:minHeight="55dip"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

            <CheckBox
                android:id="@+id/cb_select_mother"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/voice_icon_select"
                android:button="@null"
                android:clickable="true"
                android:focusable="false"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/cb_select"
                android:background="@drawable/btn_border_green"
                android:src="@drawable/mother"/>

            <com.space.licht.envisiondemo.widget.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/video_iv"
                android:gravity="center"
                android:text="Mother"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:minHeight="55dip"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

            <CheckBox
                android:id="@+id/cb_select_son"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/voice_icon_select"
                android:button="@null"
                android:clickable="true"
                android:focusable="false"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/cb_select"
                android:background="@drawable/btn_border_green"
                android:src="@drawable/son"/>

            <com.space.licht.envisiondemo.widget.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/video_iv"
                android:gravity="center"
                android:text="Son"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:minHeight="55dip"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

            <CheckBox
                android:id="@+id/cb_select_Daughter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/voice_icon_select"
                android:button="@null"
                android:clickable="true"
                android:focusable="false"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/cb_select"
                android:background="@drawable/btn_border_green"
                android:src="@drawable/daughter"/>

            <com.space.licht.envisiondemo.widget.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/video_iv"
                android:gravity="center"
                android:text="Daughter"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:minHeight="55dip"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

            <CheckBox
                android:id="@+id/cb_select_Nephew"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/voice_icon_select"
                android:button="@null"
                android:clickable="true"
                android:focusable="false"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/cb_select"
                android:background="@drawable/btn_border_green"
                android:src="@drawable/nephew"/>

            <com.space.licht.envisiondemo.widget.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/video_iv"
                android:gravity="center"
                android:text="Nephew"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:minHeight="55dip"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

            <CheckBox
                android:id="@+id/cb_select_pad"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/voice_icon_select"
                android:button="@null"
                android:clickable="true"
                android:focusable="false"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/cb_select"
                android:background="@drawable/btn_border_green"
                android:src="@drawable/ipad"/>

            <com.space.licht.envisiondemo.widget.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/video_iv"
                android:gravity="center"
                android:text="Pad"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/video_fragment_btn"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_border_blue"
            android:text="Initial Group Talk"
            android:textAllCaps="false"
            android:textColor="@color/colorBluePrimary"/>
    </LinearLayout>


</LinearLayout>