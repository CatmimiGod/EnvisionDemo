<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_one_number_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBluePrimary">

        <ImageView
            android:id="@+id/activity_one_number_back"
            android:src="@mipmap/top_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="One Number"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/activity_one_number_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="45dp"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:layout_below="@+id/activity_one_number_relativelayout"
        android:background="@color/white"
        android:id="@+id/activity_one_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.baoyz.swipemenulistview.SwipeMenuListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/activity_one_number_add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bottom_icon_add_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add More"
                android:textColor="@color/colorBluePrimary"
                android:textSize="25dp"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>