<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="55dip"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                >

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/voice_icon_select"
        android:button="@null"
        android:clickable="true"
        android:focusable="false"/>

    <ImageView
        android:id="@+id/video_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_border_green"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cb_select"
        android:src="@drawable/daughter"/>

    <com.space.licht.envisiondemo.widget.textview.RegularTextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/video_iv"
        android:text="Mother"
        android:textColor="@android:color/black"/>


    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/video_iv"
        android:background="@color/gray_light"/>

</RelativeLayout>