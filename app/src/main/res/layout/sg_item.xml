<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/member_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <com.space.licht.envisiondemo.widget.XCRoundImageView
            android:id="@+id/iv_sghead"
            android:background="@drawable/voice_icon_noselect"
            android:padding="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:textColor="@color/dark_black"
                android:id="@+id/tv_sgname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />

            <TextView
                android:textColor="@color/dark_black"
                android:id="@+id/tv_sgpetname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recents_calls_ll"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/dark_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recents calls"/>

            <ImageView
                android:id="@+id/sgadpter_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:src="@drawable/icon_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="@color/paint_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_start_inform_aviation_content"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/gray_bg"
        android:orientation="vertical">
        <com.space.licht.envisiondemo.widget.textview.BoldTextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:text="Recent calls"
            android:textSize="13dp"
            android:textColor="@color/dark_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.space.licht.envisiondemo.widget.InnerListview
            android:id="@+id/lv_start_aoc"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            >
        </com.space.licht.envisiondemo.widget.InnerListview>
        



    </LinearLayout>


</LinearLayout>