<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="620dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorBluePrimary">


        <com.space.licht.envisiondemo.widget.textview.RegularTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Group Talk"
            android:textSize="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_border_green"
            android:padding="2dp"
            android:src="@drawable/father_large"/>
    </RelativeLayout>

    <ListView

        android:id="@+id/lv_store"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/white"
        android:layout_below="@+id/rl2"
        android:fastScrollEnabled="false"
        android:smoothScrollbar="false"
        />

    <Button
        android:layout_weight="1"
        android:id="@+id/video_fragment_btn"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:background="@drawable/btn_border_blue"
        android:text="Initial Group Talk"
        android:textColor="@color/colorBluePrimary"/>

</LinearLayout>