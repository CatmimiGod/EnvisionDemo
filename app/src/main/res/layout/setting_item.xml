<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/setting_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <com.space.licht.envisiondemo.widget.XCRoundImageView
            android:id="@+id/setting_image_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/voice_icon_noselect"
            android:padding="6dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/setting_name"
                android:text="Mother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/setting_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="628-458-2896"
                android:textColor="@color/dark_black"
                android:textSize="12sp"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/icon_arrow_right"/>
    </LinearLayout>

    <ImageView
        android:background="@color/bel_grey_text"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


</LinearLayout>